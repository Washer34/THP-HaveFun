<br><br><br>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-4">
      <h2>Créer un nouvel événement</h2>

      <%= form_for(@event, html: { class: "form" }) do |f| %>
        <div class="form-group">
          <%= f.label :title, "Titre" %><br>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description, "Description" %><br>
          <%= f.text_area :description, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :start_date, "Date de début" %><br>
          <%= f.datetime_select :start_date, start_year: Time.current.year, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :duration, "Durée" %><br>
          <%= f.number_field :duration, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :price, "Prix" %><br>
          <%= f.number_field :price, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :location, "Lieu" %><br>
          <%= f.text_field :location, class: "form-control" %>
        </div>

        <div class="form-actions">
          <%= f.submit "Créer l'événement", class: "btn btn-secondary" %>
          <%= link_to "Retour", events_path, class: "btn btn-dark float-end" %>
        </div>
      <% end %>

    </div>
  </div>
</div>