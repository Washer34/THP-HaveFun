<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-5">
      <h1>Modifier le profil de <%= @user.first_name %></h1>

      <%= form_for([:admin, @user]) do |f| %>
        <%= render "devise/shared/error_messages", resource: @user %>

        <div class="form-group">
          <%= f.label :first_name, "PrÃ©nom" %><br />
          <%= f.text_field :first_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name, "Nom" %><br />
          <%= f.text_field :last_name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :description, "Description" %><br />
          <%= f.text_area :description, class: "form-control" %>
        </div>

        <div class="form-actions">
          <%= f.submit "Enregistrer les modifications", class: "btn btn-dark" %>
          <%= link_to "Retour", :back, class: "btn btn-dark float-end" %>
        </div>
      <% end %>
    </div>
  </div>
</div>